<Window x:Class="FullTrustWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FullTrustWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Button Content="Write to Temp folder"
                    HorizontalAlignment="Stretch"
                    Click="TempWriteButtonClick"
                    Margin="12" />
            <Button Content="Write to AppData folder"
                    HorizontalAlignment="Stretch"
                    Margin="12"
                    Click="AppDataWriteButtonClick" />
        </StackPanel>
    </Grid>
</Window>
